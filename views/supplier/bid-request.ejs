	<div class="container">
		<div class="smooth-shadow profile-form">
			<form>
				<div class="form-group">
					<label>Buyer's Organization Name</label>
					<input type="text" class="form-control" value="<%= buyer.organizationName %>" readonly>
					<br>
					<button type="button" class="btn btn-dark" data-target="#buyerDetailsModal" data-toggle="modal">View Buyer Details</button>
				</div>

				<div class="modal fade" id="buyerDetailsModal" tabindex="-1" role="dialog" aria-hidden="true">
					<div class="modal-dialog modal-dialog-centered" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLongTitle">Buyer</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<div class="form-group">
									<label>Buyer's Organization UNITE ID</label>
									<input type="text" class="form-control" value="<%= buyer.organizationUniteID %>" readonly>
								</div>
								<div class="form-group">
									<label>Buyer's Contact name</label>
									<input type="text" class="form-control" value="<%= buyer.contactName %>" readonly>
								</div>
								<div class="form-group">
									<label>Buyer's Email address</label>
									<input type="email" class="form-control" value="<%= buyer.emailAddress %>" readonly>
								</div>
								<div class="form-group">
									<label>Buyer's Department / Agency / Group</label>
									<input type="text" class="form-control" value="<%= buyer.deptAgencyGroup %>" readonly>
								</div>
								<div class="form-group">
									<label>Buyer's Qualification / Experience</label>
									<input type="text" class="form-control" value="<%= buyer.qualification %>" readonly>
								</div>
								<div class="form-group">
									<label>Buyer's Address</label>
									<input type="text" class="form-control" value="<%= buyer.address %>" readonly>
								</div>
								<div class="form-group">
									<label>Buyer's Country</label>
									<input type="text" class="form-control" value="<%= buyer.country %>" readonly>
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
							</div>
						</div>
					</div>
				</div>
        
        <input type='hidden' name='createdAt' value="<%= request.createdAt %>">

				<div class="form-group">
					<label>Item Description</label>
					<input type="text" class="form-control" value="<%= request.itemDescription %>" readonly>
				</div>
				<div class="form-group">
					<% const re = /:\s|,\s/; 
          const array = request.productsServicesOffered.split(re);
          array.splice(array.length - 1);%>
					<Code></Code>
					<label>Products / Services Offered</label>
					<ul class="list-group">
						<% for (item of array) { %>
						<li class="list-group-item"><%= item %></li>
						<% } %>
					</ul>
				</div>
				<div class="form-group">
					<label>Item Description (Long)</label>
          <textarea class="form-control"><%= request.itemDescriptionLong %></textarea>
				</div>
        <div class="form-group">
					<label>Item Description (URL)</label>
					<input type="url" class="form-control" value=<%= request.itemDescriptionUrl %>>
				</div>
				<div class="form-group">
					<label>Amount</label>
					<input type="text" class="form-control" value="<%= request.amount %>">
				</div>
				<div class="form-group">
					<label>Delivery Location</label>
					<textarea class="form-control" readonly><%= request.deliveryLocation %></textarea>
				</div>
				<div class="form-group">
					<label>Delivery Requirements</label>
					<textarea class="form-control" readonly><%= request.deliveryRequirements %></textarea>
				</div>
				<div class="form-group">
					<label>Compliance Requirements</label>
					<textarea class="form-control" readonly><%= request.complianceRequirements %></textarea>
				</div>
        <div class="form-group">
					<label>Other Requirements</label>
					<textarea class="form-control" readonly><%= request.otherRequirements %></textarea>
				</div>
        <div class="form-group">
					<label>Status</label>
					<input type="hidden" class="form-control" readonly value="<%= request.status %>">
				</div>
        <div class="form-group">
					<label>Price</label>
					<input type="number" class="form-control" readonly value="<%= request.price %>">
				</div>

				<span><b>Status: </b> 
				<% if (request.status == 0) { %> "Buyer requested a bid from you. Please send information to buyer." <% } %>
				<% if (request.status == 1) { %> "Waiting for buyer's processing." <% } %>				
				<% if (request.status == 2) { %> "Buyer wants to buy the product for <%= request.price %>. Cancel or Accept." <% } %>
				<% if (request.status == 3) { %> "You started the delivery. Wait for confirmation of buyer." <% } %>
				<% if (request.status == 4) { %> "Payment and delivery are done." <% } %>
				<% if (request.status == 5) { %> "You cancelled the request." <% } %>
				<% if (request.status == 6) { %> "Buyer cancelled the request." <% } %>
				</span>
        
        </form>

				<div class="container mt-4">
					<h3>Messages</h3>
					<form method="POST">
						<div class="form-group">
							<label>Message</label>
							<textarea name="message" class="form-control"></textarea>
						</div>
						
						<input type="hidden" name="from" value="<%= supplier._id %>">
						<input type="hidden" name="to" value="<%= buyer._id %>">
            <input type="hidden" name="reqId" value="<%= request._id %>">
            <input type="hidden" name="sender" value="<%= buyer.organizationName %>">
            <input type="hidden" name="receiver" value="<%= supplier.companyName %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
						<button type="submit" class="btn btn-primary" style="float: right;">Send</button>
					</form>
				</div>
        
        <div class="container mt-4">
          	<div class="form-group">
              <input type="hidden" name="from1" value="<%= supplier._id %>">
						  <input type="hidden" name="to1" value="<%= buyer._id %>">
              <input type="hidden" name="reqId1" value="<%= request._id %>">
              <input type="hidden" name="sender1" value="<%= buyer.organizationName %>">
              <input type="hidden" name="receiver1" value="<%= supplier.companyName %>">
							<a href="../chat/<%= supplier._id %>/<%= buyer._id %>/<%= request._id %>/<%= buyer.organizationName %>/<%= supplier.companyName %>">
                <button class="btn-primary custom-button">Chat</button>
              </a>              
						</div>
        </div>       
			
		</div>
	</div>

</body>

