<html>
  <head>
    <title>Buyer - Chat Login for UNITE</title>
    <meta charset="utf-8">    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Another cool thing made with Glitch">
    <link id="favicon" rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="/https.js"></script>
    <script src="/chatUsers.js"></script>
    <script src="/autocomp.js"></script>
    <script type="text/javascript">
    $(document).ready(function() {
      $('input.form-control').bind('change', function () {
        if($('#username').val() && $('#room').val()) {
          var string = "../../../../../../../supervisor/chat/";
          string += $('#from').val() + '/' + $('#to').val() + '/' 
          + $('#username').val() + '/' + $('#room').val() + '/' 
          + $('#reqId').val() + '/' + $('#reqName').val() + '/' 
          + $('#toName').val() + '/' + $('#fromName').val();
          $('#join').removeAttr('disabled');
          $('#join').parent('a').attr('href', string);
        } else {
          $('#join').attr('disabled', 'disabled');
        }
      });
      
      $('#join').click(function(e) {
        var x = addUser(null, $('#username').val(), $('#room').val());
      });
    });    
    </script>
  </head>
  
  <body>    
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="width: 100% !important;">
    <a class="navbar-brand" href="/">UNITE</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>
    <div class="container">
      <br><br>
      <div>
        <h1 style="color: blue; font-family: verdana; text-decoration: underline">
          Join the Chat Room
        </h1>        
          <div class="form-group mr-2">
            <label>Display Name</label>
            <input type="hidden" name="from" id="from" value="<%= from %>"/>
            <input type="hidden" name="to" id="to" value="<%= to %>"/>
            <input type="hidden" name="reqId" id="reqId" value="<%= reqId %>"/>
            <input type="hidden" name="reqName" id="reqName" value="<%= reqName %>"/>
            <input type="hidden" name="fromName" id="fromName" value="<%= fromName %>"/>
            <input type="hidden" name="toName" id="toName" value="<%= toName %>"/>
            <input type="text" class="form-control" name="username" placeholder="Choose a username" required>
          </div>
          <div class="form-group mr-2">
            <label>Room</label>
            <input type="text" class="form-control" name="room" placeholder="Chatroom" required>
          </div>
          <div class="form-group mr-2">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <a href=""><button id="join" class="btn btn-danger">Join Chat!</button></a>
          </div>        
      </div>      
    </div>    
  </body>  
</html>